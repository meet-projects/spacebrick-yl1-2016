import turtle
from turtle import *
import bordersClass
class Pedal(Turtle):
	def __init__(self, dx, x_cor, y_cor,width, speed, color):
		Turtle.__init__(self)
		turtle.register_shape("pad.gif")
		self.shape("pad.gif")
		self.ht()
		self.dx = dx
		self.x_cor = x_cor
		self.y_cor = y_cor
		self.width=width
		self.speed=speed
		self.goto(self.x_cor, self.y_cor)
		self.color=color
		self.st()	

